@model IEnumerable<MovieList.Core.DTOs.Movie.MovieDto>

@{
    ViewData["Title"] = "Film Ara";
    var searchTerm = ViewBag.SearchTerm as string;
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-search" style="color: var(--accent-green);"></i> Arama Sonuçları</h2>
            @if (!string.IsNullOrEmpty(searchTerm))
            {
                <p class="text-muted">
                    "<strong style="color: var(--accent-cream);">@searchTerm</strong>" için <strong>@Model.Count()</strong> sonuç bulundu
                </p>
            }
        </div>
    </div>

    <!-- Arama Formu -->
    <div class="row mb-4">
        <div class="col-md-8 offset-md-2">
            <form asp-controller="Movie" asp-action="Search" method="get" class="input-group input-group-lg">
                <input type="text"
                       name="q"
                       class="form-control"
                       placeholder="Film adı yazın..."
                       value="@searchTerm"
                       autofocus>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search"></i> Ara
                </button>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <!-- Sonuç Bulunamadı -->
        <div class="row">
            <div class="col-12 text-center py-5">
                <i class="fas fa-film fa-5x text-muted mb-3"></i>
                <h4 class="text-muted">
                    @if (string.IsNullOrEmpty(searchTerm))
                    {
                        <text>Aramak için bir film adı girin</text>
                    }
                    else
                    {
                        <text>Sonuç bulunamadı</text>
                    }
                </h4>
                <p class="text-muted">Farklı anahtar kelimeler deneyin</p>
            </div>
        </div>
    }
    else
    {
        <!-- Arama Sonuçları -->
        <div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-4">
            @foreach (var movie in Model)
            {
                <div class="col">
                    <div class="card h-100 movie-card">
                        <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" class="text-decoration-none">
                            @if (!string.IsNullOrEmpty(movie.PosterPath))
                            {
                                <img src="@movie.FullPosterUrl"
                                     class="card-img-top"
                                     alt="@movie.Title"
                                     style="height: 300px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center"
                                     style="height: 300px;">
                                    <i class="fas fa-film fa-3x text-white"></i>
                                </div>
                            }

                            <div class="card-body">
                                <h6 class="card-title text-dark mb-2" title="@movie.Title">
                                    @(movie.Title.Length > 30 ? movie.Title.Substring(0, 30) + "..." : movie.Title)
                                </h6>

                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        @movie.ReleaseDate?.Year
                                    </small>

                                    @if (movie.VoteAverage.HasValue)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-star"></i> @movie.VoteAverage.Value.ToString("0.0")
                                        </span>
                                    }
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>