@model IEnumerable<MovieList.Core.DTOs.Movie.MovieDto>

@{
    ViewData["Title"] = "Popüler Filmler";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="mb-3" style="color: var(--accent-cream);">
            <i class="fas fa-fire" style="color: var(--accent-green);"></i> Popüler Filmler
        </h2>
    </div>
</div>

<div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-4">
    @foreach (var movie in Model)
    {
        <div class="col">
            <div class="card h-100 movie-card border-0 bg-transparent">
                <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" class="text-decoration-none position-relative d-block">

                    <div class="position-absolute top-0 end-0 m-2 d-flex flex-column align-items-end gap-1" style="z-index: 5;">
                        @if (movie.UserAverageRating.HasValue)
                        {
                            <span class="badge shadow d-flex align-items-center gap-1"
                                  style="background-color: var(--accent-cream); color: var(--main-bg); font-size: 0.9rem; border: 1px solid var(--accent-green);">
                                <i class="fas fa-star text-warning"></i> @movie.UserAverageRating.Value.ToString("0.0")
                            </span>
                        }

                        @if (movie.VoteAverage.HasValue)
                        {
                            <span class="badge shadow"
                                  style="background-color: var(--accent-green); font-size: 0.75rem; opacity: 0.9;">
                                TMDB @movie.VoteAverage.Value.ToString("0.0")
                            </span>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(movie.PosterPath))
                    {
                        <img src="@movie.FullPosterUrl" class="card-img-top rounded shadow" alt="@movie.Title"
                             style="height: 300px; object-fit: cover; border: 1px solid var(--accent-green);">
                    }
                    else
                    {
                        <div class="card-img-top d-flex align-items-center justify-content-center rounded shadow"
                             style="height: 300px; background-color: var(--main-bg); color: var(--accent-green); border: 1px solid var(--accent-green);">
                            <i class="fas fa-film fa-3x"></i>
                        </div>
                    }

                    <div class="card-body px-1 py-2">
                        <h6 class="card-title mb-2 text-truncate" title="@movie.Title" style="color: var(--accent-cream);">
                            @movie.Title
                        </h6>

                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">@movie.ReleaseDate?.Year</small>
                            <small class="text-muted">
                                <i class="fas fa-eye"></i> @movie.WatchCount
                            </small>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    }
</div>