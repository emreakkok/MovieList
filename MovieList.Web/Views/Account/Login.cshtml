@model MovieList.Core.DTOs.Auth.LoginDto

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">
                        <i class="fas fa-sign-in-alt"></i> Giriş Yap
                    </h2>

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Email or Username -->
                        <div class="mb-3">
                            <label asp-for="EmailOrUsername" class="form-label">
                                <i class="fas fa-user"></i> Email veya Kullanıcı Adı
                            </label>
                            <input asp-for="EmailOrUsername"
                                   class="form-control"
                                   placeholder="ornek@email.com veya username"
                                   autofocus />
                            <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock"></i> Şifre
                            </label>
                            <input asp-for="Password"
                                   class="form-control"
                                   placeholder="Şifrenizi girin" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="mb-4 form-check">
                            <input asp-for="RememberMe"
                                   class="form-check-input"
                                   type="checkbox" />
                            <label asp-for="RememberMe" class="form-check-label">
                                Beni Hatırla
                            </label>
                        </div>

                        <!-- Submit -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Giriş Yap
                            </button>
                        </div>

                        <!-- Register Link -->
                        <div class="text-center mt-3">
                            <p class="text-muted">
                                Hesabın yok mu?
                                <a asp-action="Register" style="color: var(--accent-green);">Kayıt Ol</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}