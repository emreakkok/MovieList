@using MovieList.Web.Extensions
@model MovieList.Core.DTOs.User.UserProfileDto

@{
    ViewData["Title"] = Model.Username + " Profili";

    // Profil sahipliği kontrolü
    var currentUserId = User.Identity.IsAuthenticated ? User.GetUserId() : 0;
    bool isOwnProfile = (currentUserId == Model.Id);
}

<div class="container mt-4">
    <!-- Profil Başlığı -->
    <div class="row align-items-center mb-5 pb-4 border-bottom" style="border-color: var(--accent-green) !important;">

        <div class="col-md-2 text-center">
            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
            {
                <img src="@Model.ProfileImageUrl" class="rounded-circle shadow"
                     style="width: 120px; height: 120px; object-fit: cover; border: 3px solid var(--accent-cream);">
            }
            else
            {
                <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto shadow"
                     style="width: 120px; height: 120px; background-color: var(--card-bg); color: var(--accent-green); border: 3px solid var(--accent-green);">
                    <i class="fas fa-user fa-4x"></i>
                </div>
            }
        </div>

        <div class="col-md-7">
            <h2 class="display-5 fw-bold" style="color: var(--accent-cream);">@Model.Username</h2>
            <p class="mb-2" style="color: var(--accent-green);">
                <i class="fas fa-calendar-alt"></i> Katılım: @Model.CreatedDate.ToString("MMMM yyyy")
            </p>
            @if (!string.IsNullOrEmpty(Model.Bio))
            {
                <p class="lead" style="font-size: 1rem; color: var(--accent-cream); opacity: 0.9;">@Model.Bio</p>
            }
        </div>

        <div class="col-md-3 text-center">
            <div class="d-flex justify-content-around mb-3">
                <div style="cursor: pointer;" onclick="window.location.href='@Url.Action("Followers", "Profile", new { id = Model.Id })'">
                    <h4 class="mb-0 fw-bold" style="color: var(--accent-green);">@Model.FollowerCount</h4>
                    <small class="text-muted">Takipçi</small>
                </div>
                <div style="cursor: pointer;" onclick="window.location.href='@Url.Action("Following", "Profile", new { id = Model.Id })'">
                    <h4 class="mb-0 fw-bold" style="color: var(--accent-green);">@Model.FollowingCount</h4>
                    <small class="text-muted">Takip</small>
                </div>
                <div>
                    <h4 class="mb-0 fw-bold" style="color: var(--accent-green);">@Model.WatchCountTotal</h4>
                    <small class="text-muted">Film</small>
                </div>
            </div>

            <form id="followForm" style="display:none;">
                @Html.AntiForgeryToken()
            </form>

            <div class="d-grid gap-2">
                @if (isOwnProfile)
                {
                    <!-- Kendi Profilim -->
                    <a asp-controller="Account" asp-action="EditProfile" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-cog"></i> Profili Düzenle
                    </a>
                }
                else if (User.Identity.IsAuthenticated)
                {
                    <!-- Başkasının Profili -->
                    @if (Model.IsCurrentUserFollowing)
                    {
                        <button onclick="unfollowUser(@Model.Id)"
                                class="btn btn-secondary btn-sm"
                                style="border: 1px solid var(--accent-green); color: var(--accent-green); background: transparent;">
                            <i class="fas fa-user-minus"></i> Takipten Çık
                        </button>
                    }
                    else
                    {
                        <button onclick="followUser(@Model.Id)"
                                class="btn btn-primary btn-sm"
                                style="background-color: var(--accent-green); border: none; color: var(--main-bg); font-weight: bold;">
                            <i class="fas fa-user-plus"></i> Takip Et
                        </button>
                    }
                }
                else
                {
                    <!-- Giriş Yapılmamış -->
                    <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path"
                       class="btn btn-outline-light btn-sm">
                        <i class="fas fa-sign-in-alt"></i> Takip etmek için giriş yap
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12 mb-3">
            <h4 style="color: var(--accent-cream); border-left: 4px solid var(--accent-green); padding-left: 10px;">
                <i class="fas fa-star text-warning"></i> Puanlara Göre Filmleri Gör
            </h4>
        </div>

        <div class="col-12">
            <div class="d-flex flex-wrap gap-2 mb-4">
                <a asp-controller="Profile" asp-action="RatedMovies" asp-route-id="@Model.Id"
                   class="btn btn-outline-light">
                    <i class="fas fa-list"></i> Tüm Oylanmış Filmler
                </a>

                @for (int i = 10; i >= 1; i--)
                {
                    <a asp-controller="Profile" asp-action="MoviesByRating" asp-route-id="@Model.Id" asp-route-rating="@i"
                       class="btn btn-sm"
                       style="background-color: var(--card-bg); color: var(--accent-cream); border: 1px solid var(--accent-green);">
                        @i ⭐
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Favori Filmler -->
    <div class="row mb-5">
        <div class="col-12 mb-3">
            <h4 style="color: var(--accent-cream); border-left: 4px solid var(--accent-green); padding-left: 10px;">
                <i class="fas fa-star text-warning"></i> Favori Filmler
            </h4>
        </div>

        @if (Model.FavoriteMovies.Any())
        {
            @foreach (var movie in Model.FavoriteMovies)
            {
                <div class="col-6 col-md-3 mb-3">
                    <div class="card h-100 movie-card border-0 bg-transparent">
                        <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id">
                            @if (!string.IsNullOrEmpty(movie.PosterPath))
                            {
                                <img src="@movie.FullPosterUrl" class="card-img-top rounded shadow" alt="@movie.Title"
                                     style="height: 250px; object-fit: cover; border: 1px solid var(--accent-green);">
                            }
                            else
                            {
                                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center rounded shadow"
                                     style="height: 250px; border: 1px solid var(--accent-green);">
                                    <i class="fas fa-film fa-2x text-white"></i>
                                </div>
                            }
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-muted fst-italic ms-3">Henüz favori film seçilmemiş.</p>
            </div>
        }
    </div>

    <!-- Watchlist -->
    <div class="row mb-5">
        <div class="col-12 mb-3">
            <h4 style="color: var(--accent-cream); border-left: 4px solid var(--accent-green); padding-left: 10px;">
                <i class="fas fa-bookmark" style="color: var(--accent-green);"></i> Watchlist
            </h4>
        </div>

        @if (Model.WatchlistMovies.Any())
        {
            @foreach (var movie in Model.WatchlistMovies)
            {
                <div class="col-3 col-md-2 mb-3">
                    <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" title="@movie.Title">
                        @if (!string.IsNullOrEmpty(movie.PosterPath))
                        {
                            <img src="@movie.FullPosterUrl" class="img-fluid rounded shadow-sm movie-card" alt="@movie.Title"
                                 style="border: 1px solid var(--card-bg);">
                        }
                        else
                        {
                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center shadow-sm movie-card"
                                 style="height: 150px; border: 1px solid var(--card-bg);">
                                <i class="fas fa-film text-white"></i>
                            </div>
                        }
                    </a>
                </div>
            }
            @if (isOwnProfile)
            {
                <div class="col-12">
                    <a asp-controller="Watchlist" asp-action="Index" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-list"></i> Tüm Watchlist'i Gör
                    </a>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-muted fst-italic ms-3">Watchlist boş.</p>
            </div>
        }
    </div>

    <!-- Son İzlenen Filmler -->
    <div class="row">
        <div class="col-12 mb-3">
            <h4 style="color: var(--accent-cream); border-left: 4px solid var(--accent-green); padding-left: 10px;">
                <i class="fas fa-history" style="color: var(--accent-green);"></i> Son İzlenenler
            </h4>
        </div>

        @if (Model.RecentWatchedMovies.Any())
        {
            @foreach (var movie in Model.RecentWatchedMovies)
            {
                <div class="col-3 col-md-2 mb-3">
                    <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" title="@movie.Title">
                        @if (!string.IsNullOrEmpty(movie.PosterPath))
                        {
                            <img src="@movie.FullPosterUrl" class="img-fluid rounded shadow-sm movie-card" alt="@movie.Title"
                                 style="border: 1px solid var(--card-bg);">
                        }
                        else
                        {
                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center shadow-sm movie-card"
                                 style="height: 150px; border: 1px solid var(--card-bg);">
                                <i class="fas fa-film text-white"></i>
                            </div>
                        }
                    </a>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-muted fst-italic ms-3">Henüz izlenen film kaydı yok.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function followUser(userId) {
            // CSRF Token al
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

            if (!token) {
                alert('Güvenlik token\'ı bulunamadı');
                return;
            }

            // Loading durumu göster
            const button = event.target;
            const originalText = button.innerHTML;
            button.disabled = true;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Yükleniyor...';

            fetch('/Follow/Follow/' + userId, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload(); // Sayfayı yenile
                } else {
                    alert(data.message || 'Takip edilemedi');
                    button.disabled = false;
                    button.innerHTML = originalText;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu');
                button.disabled = false;
                button.innerHTML = originalText;
            });
        }

        function unfollowUser(userId) {
            if (!confirm('Takipten çıkmak istediğinize emin misiniz?')) {
                return;
            }

            // CSRF Token al
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

            if (!token) {
                alert('Güvenlik token\'ı bulunamadı');
                return;
            }

            // Loading durumu göster
            const button = event.target;
            const originalText = button.innerHTML;
            button.disabled = true;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Yükleniyor...';

            fetch('/Follow/Unfollow/' + userId, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Takipten çıkılamadı');
                    button.disabled = false;
                    button.innerHTML = originalText;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu');
                button.disabled = false;
                button.innerHTML = originalText;
            });
        }
    </script>
}