@model IEnumerable<MovieList.Core.DTOs.User.UserDto>

@{
    ViewData["Title"] = "Kullanıcı Ara";
}

<div class="container mt-4">
    <h2 class="mb-4" style="color: var(--accent-cream);">
        <i class="fas fa-users"></i> Kullanıcı Ara
    </h2>

    <!-- Arama Formu -->
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <form asp-controller="Search" asp-action="Users" method="get">
                <div class="input-group input-group-lg">
                    <input type="text" name="q" class="form-control"
                           placeholder="Kullanıcı adı ara..."
                           value="@ViewBag.SearchTerm" autofocus>
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search"></i> Ara
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
    {
        <h4 class="mb-3" style="color: var(--accent-cream);">
            "@ViewBag.SearchTerm" için sonuçlar
            <span class="badge bg-secondary">@Model.Count() kullanıcı</span>
        </h4>

        @if (Model.Any())
        {
            <div class="row">
                @foreach (var user in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100" style="background-color: var(--card-bg);">
                            <div class="card-body d-flex align-items-center">
                                <a asp-controller="Profile" asp-action="Index" asp-route-id="@user.Id">
                                    @if (!string.IsNullOrEmpty(user.ProfileImageUrl))
                                    {
                                        <img src="@user.ProfileImageUrl"
                                             class="rounded-circle me-3"
                                             style="width: 60px; height: 60px; object-fit: cover; border: 2px solid var(--accent-green);">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle me-3 d-flex align-items-center justify-content-center"
                                             style="width: 60px; height: 60px; background-color: var(--main-bg); border: 2px solid var(--accent-green);">
                                            <i class="fas fa-user fa-2x" style="color: var(--accent-green);"></i>
                                        </div>
                                    }
                                </a>

                                <div class="flex-grow-1">
                                    <h5 class="mb-1">
                                        <a asp-controller="Profile" asp-action="Index" asp-route-id="@user.Id"
                                           style="color: var(--accent-cream); text-decoration: none;">
                                            @user.Username
                                        </a>
                                    </h5>
                                    @if (!string.IsNullOrEmpty(user.Bio))
                                    {
                                        <p class="mb-0 text-muted small">
                                            @(user.Bio.Length > 60 ? user.Bio.Substring(0, 60) + "..." : user.Bio)
                                        </p>
                                    }
                                </div>

                                <a asp-controller="Profile" asp-action="Index" asp-route-id="@user.Id"
                                   class="btn btn-sm btn-outline-light">
                                    Profil
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> "@ViewBag.SearchTerm" için kullanıcı bulunamadı.
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-search fa-3x mb-3" style="color: var(--accent-green);"></i>
            <p class="text-muted">Kullanıcı aramak için yukarıdaki arama kutusunu kullanın</p>
        </div>
    }
</div>